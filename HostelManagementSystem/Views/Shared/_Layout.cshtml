<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class=" container">

        <div class="col-lg-12">
            <a href="@Url.Action("Index", "Home")" style="text-decoration:none; color:orangered;">
                <h4>
                    <span>
                        <strong>@System.Configuration.ConfigurationManager.AppSettings["CompanyName"]</strong>
                    </span>
                </h4>
            </a>

        </div>
        <div class="col-md-12">
            <div class="col-sm-12">
                <div class="col-lg-4">
                   
                        Welcome
                        @{
                            var imgSrc = "";
                            var base64 = HttpContext.Current.Session["UserImg"];
                            if (base64 != null)
                            {
                                imgSrc = String.Format("data:image/gif;base64,{0}", base64);
                                
                                                        <a data-toggle="tooltip" data-placement="right" title="<img src='@imgSrc' class='img-circle'' width='35%' />">
                                                            <b>@HttpContext.Current.Session["UserFullName"].ToString()</b>
                                                        </a>
                            }
                            else {
                                @*<b>@HttpContext.Current.Session["UserFullName"].ToString()</b>*@
                            }
                        }
                    
                </div>
                <div class="col-lg-8">
                    <a href="@Url.Action("Logout", "User")" class="pull-right">
                        Sign Out
                    </a>
                </div>
            </div>
        </div>
        <br />
        <br />
        <br />
        <div class="col-lg-12">
            <div class="col-sm-4"></div>
            <div class="col-sm-8">
                <div class="pull-right">
                    <a style="text-decoration:none" href="@Url.Action("Index","Home")">  <i class="glyphicon glyphicon-home"></i> Home </a> | <a style="text-decoration:none" href="@Url.Action("Dashboard","Home")"> <i class="glyphicon glyphicon-dashboard"></i> Dashboard </a>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-12">
        <hr />
        <div class="content container">

            @RenderBody()
            <br/>
            <br/>
        </div>


    </div>


    @*<footer class="footnote text-center">


        </footer>*@

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
<script>
    $('a[data-toggle="tooltip"]').tooltip({
        animated: 'fade',
        placement: 'bottom',
        html: true
    });
</script>